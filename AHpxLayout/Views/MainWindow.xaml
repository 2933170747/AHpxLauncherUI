                                <Grid Grid.Row="2"
                                              Margin="15,0">
                                    <TextBlock VerticalAlignment="Center"
                                                       Foreground="Gray"
                                                       Text="UUID" />
                                    <TextBlock VerticalAlignment="Center"
                                                       Foreground="Gray"
                                                       Text="UUID-UUID-UUID-UUID"
                                                       HorizontalAlignment="Right"/>
